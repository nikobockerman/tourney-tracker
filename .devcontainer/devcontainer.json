{
  "name": "AmplifyAngular",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "features": {
    "ghcr.io/devcontainers/features/aws-cli:1": {}
  },
  "containerEnv": {
    "NG_SERVE_HOST_ARG": "--host=::"
  },
  "customizations": {
    "vscode": {
      "extensions": ["angular.ng-template", "editorconfig.editorconfig"],
      "settings": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
      }
    }
  }
}
