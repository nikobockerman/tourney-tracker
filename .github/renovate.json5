{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  extends: ["config:best-practices", "config:js-app"],
  lockFileMaintenance: {
    enabled: true,
  },
  postUpdateOptions: ["yarnDedupeHighest"],
  separateMinorPatch: true,
  packageRules: [
    {
      description: "Disable docker pinning for devcontainer",
      matchFileNames: [".devcontainer/Dockerfile"],
      pinDigests: false,
    },
    {
      description: "Group amplify backend and backend-cli together",
      matchPackageNames: ["@aws-amplify/backend", "@aws-amplify/backend-cli"],
      groupName: "amplify-backend",
    },
    {
      description: "Prevent updating zone.js to next minor version",
      matchPackageNames: ["zone.js"],
      allowedVersions: "~0.14.10",
    },
    {
      description: "Prevent updating typescript to next minor version",
      matchPackageNames: ["typescript"],
      allowedVersions: "~5.5.4",
    },
  ],
}
